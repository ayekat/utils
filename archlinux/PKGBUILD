# Maintainer: Tinu Weber <http://ayekat.ch>

pkgbase=ayekat-utils-deps
pkgname=(ayekat-utils-deps ayekat-utils-deps-desktop)
pkgver=2018.02.02
pkgrel=1
arch=(any)

url='https://github.com/ayekat/utils'

package_ayekat-utils-deps() {
  pkgname=ayekat-utils-deps
  pkgdesc="Dependencies for ayekat's utilities"
  depends=(bash bc coreutils curl file grep perl sh tmux)
}

package_ayekat-utils-deps-desktop() {
  pkgname=ayekat-utils-deps-desktop
  pkgdesc="Desktop dependencies for ayekat's utilities"
  depends=(argyllcms ayekat-utils-deps dmenu exiv2 ffmpeg inotify-tools pass
           scrot xdotool xorg-xmodmap xorg-xinput xorg-xrandr xtrlock)
  optdepends=('bash: bleep'
              'beep: bleep'
              'freerdp: RDP'
              'neroaac: encode AAC audio')
}
