#!/usr/bin/env zsh

# Concatenates videos with same codecs
# (see https://trac.ffmpeg.org/wiki/Concatenate)

usage() {
	echo "Usage:  vidcat OUT IN1 IN2 [IN3 ...]"
	exit 1
}

out="$1"
test -n "$out" || usage
shift
test $# -ge 1 || usage

ffmpeg -f concat -safe 0 -i <(for v in "$@"; do echo "file $(pwd)/$v"; done) -c copy "$out"
