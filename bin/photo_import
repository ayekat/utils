#!/usr/bin/env sh

# Determine extension:
ext="$(file --brief --mime "$1" | cut -d ';' -f 1 | cut -d '/' -f 2)"
case "$ext" in
	tiff) ext=nef ;;
	jpeg) ext=jpg ;;
	*) echo "Unknown file type: $ext" >&2; exit 1
esac

# Determine date-name:
name=$(exiv2 "$1" | grep '^Image timestamp' | \
       sed -e 's/^[^:]\+: //g;s/://g;s/ /_/g')
if [ -z "$name" ]; then
	echo "Empty date-name for $1" >&2
	exit 1
fi

# Check for existence:
i=1
while true; do
	if [ $i -eq 1 ]; then
		filename="${name}.${ext}"
	else
		filename="${name}_${i}.${ext}"
	fi
	if [ -e "$filename" ]; then
		i=$(($i + 1))
		echo "$filename exists, incrementing counter to $i"
	else
		break
	fi
done
mv -iv "$1" "$filename"
