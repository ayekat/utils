#!/usr/bin/env sh

emote="$(dmenu "$@" <<- EOF | cut -c 12-
fliptable  (╯°□°)╯︵ ┻━┻
heart      ♥
love       ♥
mdash      —
shrug      ¯\\_(ツ)_/¯
shrug      ¯\\(°_o)/¯
shrug      (°◡ﾟ)
snowman    ☃
watching   (-(-(-(-.-)-)-)-)
EOF
)"
printf "%s" "$emote" | xclip -i -selection clipboard
if [ -n "$emote" ]; then
	notify-send "emote" "$(printf "%s" "$emote" | sed 's/\\/\\\\/g')"
fi
